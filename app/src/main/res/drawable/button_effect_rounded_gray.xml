<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape >
            <solid android:color="#66666666"/>
            <stroke android:width="0dp" android:color="#66666666"/>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp"/><!--각 모서리의 라운드 처리 - 값이 클수록 라운드의 각이 커진다.-->
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape >
            <solid android:color="#CCCCCCCC" />
            <stroke android:width="0dp" android:color="#CCCCCCCC" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
        </shape>
    </item>

</selector>